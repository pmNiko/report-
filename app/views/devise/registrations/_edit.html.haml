.card-group
  .card.border-info
    .card-header.text-center
      .row
        .col-4
        .col-4
          %h4 CREDENTIAL
        .col-4
          .float-right

    .card-body.p-0
      %nav.nav.nav-tabs.nav-justified
        %spam.nav-item.nav-link
          = link_to edit_profile_path, :remote => true do
            = fa_icon "user", text: "",
            right: true, class: "fa-lg", :title =>"Profile"
        %a.nav-item.nav-link{"data-toggle" => "tab", :href => "#"}
          = fa_icon "unlock-alt spin", class: "fa-1x"
    .card-group
      .card
        .card-header.text-center
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :role => 'form'}) do |f|
          = devise_error_messages!
          .card-group
            .card.border-info
              .card-body.text-center
                .card-header SECURITY
                .card-body.p-0
                  %table.table.table-striped
                    %thead
                      %tr.row.m-0
                        %th.d-inline-block.col-12 Current password
                      %tr.row.m-0
                        %td.d-inline-block.col-12
                          = f.password_field :current_password, class: 'form-control'
                        %th.d-inline-block.col-12 New password
                        %td.d-inline-block.col-12
                          = f.password_field :password, :autocomplete => 'off', class: 'form-control'
                      %tr.row.m-0
                        %th.d-inline-block.col-12 Password confirmation
                      %tr.row.m-0
                        %td.d-inline-block.col-12
                          = f.password_field :password_confirmation, class: 'form-control'
          .card.text-center
            %p= f.submit 'Update', :class => "btn btn-outline-success btn-sm "
