<%= simple_form_for @claim, remote: true, html: {class: "form-inline"} do |f| %>
  <%= f.error_notification %>
  <%= f.input :user_ids,
                    label: 'Resposables',
                    label_method: :email,
                    value_method: :id,
                    collection: User.all,
                    include_blank: false,
                    input_html: {id: 'claim_user_ids', multiple: true },
                    prompt: 'Seleccione los responsables'
  %><br><br>
  <%= f.input :ticket %>
  <%= f.input :client %>
<% end %>
