// Add the dialog title
$('#dialog h3').html("<i class='glyphicon glyphicon-plus'></i> Add New Customer");

// Render the new form
$('.modal-body').html('<%= j render("form") %>');

// Show the dynamic dialog
$('#dialog').modal("show");
$('#claim_user_ids').select2({
  width: '270px'
});
$("#claim_user_ids").attr('multiple', true);

// Set focus to the first element
$('#dialog').on('shown.bs.modal', function () {
	  $('.first_input').focus()
  });

$('.modal-footer').html(
 "<button type='button' class='btn btn-default pull-left' data-dismiss='modal'>Volver</button>"+
 "<button type='submit' name='commit' class='btn btn-primary pull-left' style='margin-left: 30%'"+
 "form='new_claim'>Cargar</button>"
);
