%tr.text-center{:id => "claim_#{claim.id}"}
  %td= claim.ticket
  %td= claim.client
  %td= claim.kind
  %td= button_to 'Begin', begin_claim_path(claim), method: :post, :class => "btn btn-outline-success btn-sm"
  %td= claim.starts
  %td= claim.ends
  %td
    = link_to edit_claim_path(claim), :remote => true do
      = fa_icon "pencil-square-o", right: true, class: "fa-lg"
    &nbsp
    = link_to '', claim, remote: true, :method => :delete,                                           |
      class:"fa fa-trash fa-lg",                                                                     |
      data: {confirm: "Delete: "+"[ Ticket:"+" #{claim.ticket} ]-"+"[ Client:"+" #{claim.client} ]", |
      verify: "#{claim.client}", verify_text: "Type: " + " '#{claim.client}' " + "to confirm"}       |
