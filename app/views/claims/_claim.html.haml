%tr.text-center{:id => "claim_#{claim.id}"}
  %td= claim.kind
  %td= claim.ticket
  %td= claim.client
  - if claim.en_curso?
    %td
      = link_to edit_claim_path(claim), :remote => true do
        = fa_icon "pencil-square-o", right: true, class: "fa-lg"
  - elsif claim.revisar?
    %td
      = link_to claim_path(claim), :remote => true do
        = fa_icon "bolt", class: "fa-lg"
  - elsif claim.contactar?
    %td
      = link_to claim_path(claim), :remote => true do
        = fa_icon "phone-square", class: "fa-lg"
  - elsif claim.finalizado?
    %td
      = link_to claim_path(claim), :remote => true do
        = fa_icon "eye", right: true, class: "fa-lg"
  - else
    %td= button_to 'Begin', begin_claim_path(claim), method: :post, remote: true,
    :class => "btn btn-outline-success btn-sm"
