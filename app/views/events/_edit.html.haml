= simple_form_for @event, remote: true, html: {class: "form-group"} do |f|
  = f.date_field :star_time
  = f.date_field :end_time
  = f.input :type_event
  = f.input :user_id
  = f.input :description
  .form-group
    = f.submit  @event.new_record? ? "Create Create" : "Update Event",
    :class => "btn btn-primary"
