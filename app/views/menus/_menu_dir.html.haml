#cn-wrapper.cn-wrapper
  %ul
    %li{":class" => ""}
      current_class?(profile_path)&gt;
      %a{:href => "/teams"}
        %i.fa.fa-plus{"aria-hidden" => "true"}
    %li
      %a{:href => "/teams/home_dir"}
        %i.fa.fa-home{"aria-hidden" => "true"}

    - if current_page?(dir_team_path)
      %li
        = link_to new_team_path, :remote => true do
          = fa_icon "users", text: "", right: true, class: "fa-lg"
    - else
      %li
        %a{:href => "/teams/home_dir"}
          %i.fa.fa-home{"aria-hidden" => "true"}

    %li
      %a{:href => "/events"}
        %i.fa.fa-calendar{"aria-hidden" => "true"}
    %li
      %a{"data-method" => "delete", :href => "/users/sign_out"}
        %i.fa.fa-power-off{"aria-hidden" => "true"}
