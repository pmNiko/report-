.row{:id => "team_#{team.id}"}
  .col-1
  .panel-group.col-10
    .panel.panel-defauls
      .panel-heading
        .panel-title
          %a{"data-parent" => "#accordion", "data-toggle" => "collapse",
           :href => "#collapse#{team.id}", :id => "but"}
            .panel-body
              %table.table.table-striped
                %tbody
                  %tr
                    %th= fa_icon "ticket", text: "Date", right: true, class: "fa-lg"
                    %th= fa_icon "tag", text: "Truck", right: true, class: "fa-lg"
                    %th= fa_icon "vcard-o", text: "Responsables", right: true, class: "fa-lg"
                    %th= fa_icon "wrench", text: "Actions", right: true, class: "fa-lg"
                  %tr
                    %td= team.date
                    %td= team.truck
                    %td
                      = team.responsables.first.email
                      - unless team.has_responsable?
                        = " - " + team.responsables.second.email
                    %th
                      = link_to edit_team_path(team), :remote => true do
                        = fa_icon "edit", right: true, class: "fa-1x"
                      &nbsp
                      = link_to '', team, remote: true, :method => :delete,                                          |
                        class:"fa fa-trash fa-1x",                                                            |
                        data: {confirm: "Delete: "+"[ Date:"+" #{team.date} ]-"+"[ Truck:"+" #{team.truck} ]", |
                        verify: "#{team.truck}", verify_text: "Type: " + " '#{team.truck}' " + "to confirm"}
    .panel-collapse.collapse.border-collapse{:id => ("collapse#{team.id}")}
      .panel-body
        %table.table.table-striped
          %tbody
          %tr
            %th= fa_icon "ticket", text: "Ticket", right: true, class: "fa-lg"
            %th= fa_icon "ticket", text: "Client", right: true, class: "fa-lg"
            %th= fa_icon "ticket", text: "State", right: true, class: "fa-lg"
            %th= fa_icon "tag", text: "Actions", right: true, class: "fa-lg"
          %tbody#claims
            = render team.claims
      .progress
        .progress-bar.bg-success.progress-bar-striped.progress-bar-animated{:style => "width:#{team.advanced}%"}
          claim advanced #{team.advanced} %
