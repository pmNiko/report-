.card
  .card
    .card-header.bg-info
      .row
        .col-4
        .col-4
        .col-4
          -if @team.finished?
            .float-right
              = link_to current_dreport_path do
                = fa_icon "check-circle", right: true, class: "fa-1x"
    .card-body.p-0
      %table.table
        %thead
          %tr
            %th= fa_icon "calendar", text: "Date", right: true, class: "fa-lg"
            %th= fa_icon "truck", text: "Truck", right: true, class: "fa-lg"
            %th= fa_icon "vcard-o", text: "Responsables", right: true, class: "fa-lg"
        %tbody
          %tr
            %td= @team.date_format
            %td= team_truck(@team)
            %td= team_responsables(@team)
    .card-body
      %table.table.table-striped
        %thead
          %tr.bg-info
            %th= fa_icon "file-text-o", text: "Type", class: "fa-lg"
            %th= fa_icon "ticket", text: "Ticket", class: "fa-lg"
            %th= fa_icon "male", text: "Client", class: "fa-lg"
            %th= fa_icon "cogs", text: "Actions", class: "fa-lg"
        %tbody#claims
          - unless @team.claims.nil?
            = render @team.claims
  .progress
    .progress-bar.bg-default.progress-bar-striped.progress-bar-animated{:style => "width: 15%"}
      progress:
    .progress-bar.bg-success.progress-bar-striped.progress-bar-animated{:style => "width: #{@team.progress_bar}%"}
      #{@team.percent}%
%br
.float-right
  %button_tag= link_to 'END SHIFT', shift_dreport_path(@team),
  method: :get, :class => "btn btn-outline-success btn-sm "


= render 'dialog'
