.container.text-center
  .card-group

    %tbody
      .card-group.card-dreport.card-dreport-show
        .card.border-info
          .card-header.text-center= dreport_responsables(@dreport) + " #{@dreport.brand} " + "#{@dreport.truck}"

          .card-body.text-center

            - @dreport.tickets.each do |ticket|
              .card-group
                .card.card-dreport-container
                  .card.card-dreport-data
                    %table
                      %td.align-middle Cliente :
                      %td.align-middle= "#{ticket.client}"
                      %td.align-middle Estado :
                      %td.align-middle= "#{ticket.status}"
                      %td.align-middle Tipo :
                      %td.align-middle= "#{ticket.kind}"
                  .card.card-dreport Observacion
                  .card-body.p-0
                    %p= "#{ticket.observation}"


          .card.card-dreport News
          .card-body
